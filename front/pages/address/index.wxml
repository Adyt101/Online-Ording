<view class="index">


  <!-- 新增入口 -->
  <text class="container-add" bindtap="showAddressAddView">新增</text>
</view>

<view class="nx_line">
    <view class="nx_line_list">
      <block wx:if="{{addressList.length !== 0}}" wx:for="{{addressList}}" wx:key='item'>
        <view class="nx_line_item" bindtap="onItemClick" bindlongtap="onItemLongClick" data-index="{{index}}">
          <view class="nx_line_mid">
            <view style="color: #000; padding: 15rpx 0">姓名：{{item.name}}</view>
            <view style="color: #000; padding: 15rpx 0">电话：{{item.phone}}</view>
            <view style="padding-top: 20rpx">收获地址：{{item.address}}</view>
          </view>
       
        <view style="text-align: right; padding: 40rpx 0 20rpx 0;">
          <text class="btn" style="background-color: green; color: #fff" catchtap="editItem" data-index="{{index}}">编辑</text>
        </view>
      </view>
      </block>
    </view>
  </view>